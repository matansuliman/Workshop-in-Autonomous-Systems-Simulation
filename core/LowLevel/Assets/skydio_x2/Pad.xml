<!-- core/LowLevel/Assets/skydio_X2/assets/Pad.xml -->
<mujoco model="Skydio X2">

  <asset>
    <texture name="donut_tex" type="2d" file="donut_with_marker.png"/>
    <material name="donut_material" texture="donut_tex" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <body name="Pad" pos="0 0 1">
      <joint name="Pad_joint_x" type="slide" axis="1 0 0" damping="5"/>
      <joint name="Pad_joint_y" type="slide" axis="0 1 0" damping="5"/>

      <geom name="donut_platform" type="cylinder" size="1.0 0.01"
            friction="3.0 2.0 0.1"
            margin="0.01"
            condim="6"
            solref="0.002 1.0"
            solimp="0.90 0.95 0.002"
            material="donut_material" rgba="1 1 1 1"/>

      <site name="Pad_site_gps" pos="0 0 0.03" size="0.002"/>
      <site name="Pad_site_touch" pos="0 0 0.011" size="0.005"/>
    </body>
  </worldbody>

  <sensor>
    <framepos name="Pad_framepos" objtype="site" objname="Pad_site_gps"/>
    <velocimeter name="Pad_velocimeter" site="Pad_site_gps"/>
  </sensor>

  <sensor>
    <touch name="Pad_touch" site="Pad_site_touch"/>
  </sensor>

</mujoco>